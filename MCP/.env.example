# SimpleMem MCP Server Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: OpenRouter API Configuration
# ===========================================
# Your OpenRouter API key (starts with sk-or-)
# Get one at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-key-here

# ===========================================
# REQUIRED: S3/DigitalOcean Spaces Configuration
# ===========================================
# Your DigitalOcean Spaces bucket name
S3_BUCKET=your-bucket-name

# Spaces Access Key (from DO control panel -> API -> Spaces Keys)
S3_ACCESS_KEY=your-spaces-access-key

# Spaces Secret Key
S3_SECRET_KEY=your-spaces-secret-key

# Spaces endpoint URL (default: nyc3)
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Spaces region
S3_REGION=nyc3

# ===========================================
# OPTIONAL: Authentication
# ===========================================
# Access key for client authentication
# If not set, the server will accept all requests
# Generate a secure random string, e.g.: openssl rand -hex 32
SIMPLEMEM_ACCESS_KEY=

# ===========================================
# OPTIONAL: Server Configuration
# ===========================================
# Server port (default: 8000)
PORT=8000

# Debug mode (default: false)
DEBUG=false

# ===========================================
# OPTIONAL: Model Configuration
# ===========================================
# LLM model to use (default: openai/gpt-4.1-mini)
LLM_MODEL=openai/gpt-4.1-mini

# Embedding model to use (default: qwen/qwen3-embedding-4b)
EMBEDDING_MODEL=qwen/qwen3-embedding-4b

# ===========================================
# OPTIONAL: Public URL Configuration
# ===========================================
# Public base URL for MCP endpoint (used in documentation/examples)
# If not set, uses relative URLs or localhost
MCP_BASE_URL=

# ===========================================
# OPTIONAL: Memory Project Tags
# ===========================================
# Comma-separated list of project tags for namespacing memories
# Format: TAG:Description,TAG2:Description2
# Default: TGA:Token Grant Administration,HRIS:Lilith/HRIS platform,Infra:Infrastructure/DevOps,Team:Cross-project team decisions
# Set to empty string to disable project tagging entirely
# MEMORY_PROJECT_TAGS=
